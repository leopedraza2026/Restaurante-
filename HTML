<h2>Pedidos de Pollo üçó</h2>

<input type="text" id="cliente" placeholder="Nombre del cliente" style="width:100%;padding:10px">

<button onclick="agregar('Pollo Entero',150)">Pollo Entero $150</button>
<button onclick="agregar('Medio Pollo',80)">Medio Pollo $80</button>
<button onclick="agregar('Papas',30)">Papas $30</button>
<button onclick="agregar('Refresco',20)">Refresco $20</button>

<h3>Pedido</h3>
<ul id="lista"></ul>

<h2>Total: $<span id="total">0</span></h2>

<button onclick="nuevo()">Nuevo Pedido</button>

<script>
let total = 0;

function agregar(nombre, precio) {
  let li = document.createElement("li");
  li.innerText = nombre + " - $" + precio;
  document.getElementById("lista").appendChild(li);
  total += precio;
  document.getElementById("total").innerText = total;
}

function nuevo() {
  document.getElementById("lista").innerHTML = "";
  document.getElementById("total").innerText = "0";
  total = 0;
}
</script>
